---
const blendMods = [
  {
    title: "Normal",
    blend: "mix-blend-mode: normal;",
  },
  {
    title: "Multiply",
    blend: "mix-blend-mode: multiply;",
  },
  {
    title: "screen",
    blend: "mix-blend-mode: screen;",
  },
  {
    title: "overlay",
    blend: "mix-blend-mode: overlay;",
  },
  {
    title: "Darken",
    blend: "mix-blend-mode: darken;",
  },
  {
    title: "lighten",
    blend: "mix-blend-mode: lighten;",
  },
  {
    title: " color-dodge",
    blend: "mix-blend-mode: color-dodge;",
  },
  {
    title: " color-burn",
    blend: "mix-blend-mode: color-burn;",
  },
  {
    title: "hard-light",
    blend: "mix-blend-mode: hard-light;",
  },
  {
    title: "difference",
    blend: "mix-blend-mode: difference;",
  },
  {
    title: "exclusion",
    blend: "mix-blend-mode: exclusion;",
  },
  {
    title: "hue",
    blend: "mix-blend-mode: hue;",
  },
  {
    title: "saturation",
    blend: "mix-blend-mode: saturation;",
  },
  {
    title: "luminosity",
    blend: "mix-blend-mode: luminosity;",
  },
  {
    title: " plus-darker",
    blend: "mix-blend-mode: plus-darker;",
  },
  {
    title: "plus-lighter",
    blend: "mix-blend-mode: plus-lighter;",
  },
];
---

<div>
  <h2 class="blend__title">Blending Modes</h2>
  <div class="timeline">
    {
      blendMods.map((blend) => (
        <>
          <div class="timeline__date">
            <div class="box">
              <div class="cover" />
              <div class="bg" style={blend.blend} />
            </div>
          </div>
          <div class="timeline__separator" />
          <div class="timeline__content">
            <div class="timeline__title">{blend.title}</div>
            <div class="timeline__description" />
          </div>
        </>
      ))
    }
  </div>
</div>

<style>
  .blend__title {
    color: var(--black, #1b1b1b);
    font-family: Patrick Hand;
    font-size: 30px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.3px;
    margin-block-end: 20px;
  }
  .box {
    display: flex;
  }
  .cover {
    --size: 50px;
    width: var(--size);
    height: var(--size);
    background-color: rgb(14, 165, 233);
    position: relative;
    z-index: 1;
    flex-shrink: 0;
  }
  .bg {
    flex-shrink: 0;
    --size: 50px;
    width: var(--size);
    height: var(--size);
    background-color: rgb(244, 63, 94);
    border-radius: 50%;
    position: relative;
    left: -29px;
    bottom: -19px;
    z-index: 10;
  }
  .timeline {
    display: grid;
    grid-column-gap: 1rem;
    grid-template-columns: 5rem 0.125rem 1fr;
  }

  .timeline__date {
    text-align: right;
  }

  .timeline__separator {
    background: rgb(203 213 225);
    position: relative;
  }
  .timeline__separator::before {
    content: "";
    position: absolute;
    top: 0.25rem;
    left: 50%;
    transform: translateX(-50%);

    background: inherit;
    border-radius: 20%;
    height: 1rem;
    width: 1rem;
  }

  .timeline__title {
    color: var(--black, #1b1b1b);
    text-transform: uppercase;
    font-family: Patrick Hand;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 28px;
    border-bottom: 1px solid var(--black, #1b1b1b);
  }

  .timeline__description {
    margin-bottom: 1rem;
    min-height: 100px;
  }
</style>
