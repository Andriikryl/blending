---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <section class="test">
    <Container>
      <div class="wrapper">
        <div class="sidebar">
          <p>sidebar</p>
        </div>
        <div class="main__box">main content</div>
      </div>
    </Container>
  </section>
</Layout>

<style>
  .wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .sidebar {
    flex-basis: 20rem;
    flex-grow: 1;
    border: 1px solid tomato;
  }
  .main__box {
    border: 1px solid tomato;
    flex-basis: 0;
    flex-grow: 999;
    min-inline-size: 50%;
  }
</style>
