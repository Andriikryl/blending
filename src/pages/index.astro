---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
import BlandingGroup from "../components/BlandingGroup.astro";
import Darken from "../components/Darken.svelte";
import Lighten from "../components/Lighten.svelte";
import Multiply from "../components/Multiply.svelte";
import Screen from "../components/Screen.svelte";
import ColorBurn from "../components/ColorBurn.svelte";
import ColorDodge from "../components/ColorDodge.svelte";
import Difference from "../components/Difference.svelte";
import ColorControlsBlend from "../components/ColorControlsBlend.svelte";
import Exclusion from "../components/Exclusion.svelte";
import Hue from "../components/Hue.svelte";
import Hero from "../components/Hero.astro";
import Info from "../components/Info.astro";
import Saturation from "../components/Saturation.svelte";
import Question from "../components/Question.svelte";
---

<Layout title="Blending">
  <section class="test">
    <Container>
      <div class="wrapper">
        <div class="sidebar">
          <BlandingGroup />
        </div>
        <div class="main__box">
          <Hero />
          <Question client:visible />
          <ColorControlsBlend client:visible />
          <Lighten client:visible />
          <Darken client:visible />
          <Multiply client:visible />
          <Screen client:visible />
          <ColorDodge client:visible />
          <Difference client:visible />
          <ColorBurn client:visible />
          <Exclusion client:visible />
          <Hue client:visible />
          <Saturation client:visible />
          <Info />
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
  .wrapper {
    margin-block: 20px;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .sidebar {
    padding: 10px;
    flex-basis: 20rem;
    flex-grow: 1;
    box-shadow:
      0 1px 1px rgba(0, 0, 0, 0.15),
      0 2px 2px rgba(0, 0, 0, 0.15),
      0 4px 4px rgba(0, 0, 0, 0.15),
      0 8px 8px rgba(0, 0, 0, 0.15);
    /* border: 1px solid tomato; */
  }
  .main__box {
    /* border: 1px solid tomato; */
    padding: 10px;
    flex-basis: 0;
    flex-grow: 999;
    min-inline-size: 50%;
    box-shadow:
      0 1px 1px rgba(0, 0, 0, 0.15),
      0 2px 2px rgba(0, 0, 0, 0.15),
      0 4px 4px rgba(0, 0, 0, 0.15),
      0 8px 8px rgba(0, 0, 0, 0.15);
  }
</style>
